<body class="theme--neutral {{ body_class }}">
  

    {% block navigation %}

        <div class="global-nav theme--white mb-l">

            <div class="[ wrapper ]">

                <div class="[ layout ]">

                    <div class="[ grid grid--middle ]">
                        
                        <div class='[ col large-2 medium-2 small-3 ] '>
                            
                            <a href='/'>
                                <img src='/images/fred-logo.png'>
                            </a>

                        </div>

                        <div class='[ col large-8 medium-8 small-7 ] global-nav__items '>
                            
                            <a href='/pages/' class='btn btn--tertiary ml-m mb-0 {% if title == 'pages' %}active{% endif %}'>
                                
                                 Pages

                            </a>
                            <a href='/pattern-library/' class='btn btn--tertiary ml-m mb-0 {% if title == 'flego' %}active{% endif %}'>
                                Flego
                            </a>

                            <a href='/freds-closet/' class='btn btn--tertiary ml-m mb-0 {% if title == 'barebones' %}active{% endif %}'>
                                
                                Bare bones

                            </a>
                            
                            <a href='/core/' class='btn btn--tertiary ml-m mb-0 {% if title == 'core' %}active{% endif %}'>
                                
                                Core

                            </a>

                        </div>
              
                    </div>

                </div>

            </div>

        </div>
            
    {% endblock %}
    

    {% block sub_navigation %}
    {% endblock %}


    {% block content %}

        {% for item in data %}
            {{ item|component }}
        {% endfor %}

        {% block page_site_wrapper %}


            {% block page_navigation %}
            {% endblock %}


            {% block page_sub_navigation %}
            {% endblock %}


            {% block page_content %}
            {% endblock %}


            {% block page_footer %}
            {% endblock %}

        {% endblock %}

    {% endblock %}



    {% block footer %}

        <div class="global-nav theme--white">

            <div class="[ wrapper ]">

                <div class="[ layout ]">

                    <div class="[ grid grid--middle ]">
                        
                        <div class='[ col ] '>

                            <p>
                                 Made with &nbsp; &hearts; &nbsp; by friendly Feds
                                 <span class='split__right'>
                                     Â© 2014. All rights reserved.
                                 </span>
                            </p>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    {% endblock %}

    {% block anchor %}
       <a href='#' class='fixed--bottom back-to-top-anchor icons--large'><i class='i i--white i-map-caret-up'></i></a>
    {% endblock %}

 

    <script src="/js/site.js"></script>
    <script src="/js/showhide.js"></script>
    {% block scripts %}{% endblock %}
    <script src="//localhost:35729/livereload.js"></script>
